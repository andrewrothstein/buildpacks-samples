#!/usr/bin/env bash
set -eo pipefail

echo "---> Hello processes buildpack"

# INPUT ARGUMENTS
env_dir=$2/env
layers_dir=$1
plan_path=$3

cat >> "${layers_dir}/launch.toml" <<EOL
[[processes]]
type = "always-args"
command = ["echo", "always"]
[[processes]]
type = "overridable-args"
command = ["echo"]
args = ["overridable"]
[[processes]]
type = "both-args"
command = ["echo", "always"]
args = ["overridable"]
EOL

echo "---> Done"
